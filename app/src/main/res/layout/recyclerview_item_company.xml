<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/companyNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="name"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/companyLastlySoldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Last profit: 0$"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/companyNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/companyNameTextView"
        />

    <TextView
        android:id="@+id/companysMoneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0$"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/companyNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/companyNameTextView" />

    <TextView
        android:id="@+id/companysMarketValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value: 0$"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/companysMoneyTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/companyLastlySoldTextView"
        app:layout_constraintTop_toTopOf="@+id/companyLastlySoldTextView"
        app:layout_constraintVertical_bias="0.0" />" />

</androidx.constraintlayout.widget.ConstraintLayout>