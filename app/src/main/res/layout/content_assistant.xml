<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AssistantActivity"
    tools:showIn="@layout/activity_assistant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headerOfAssistants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="Assistant"
                android:textSize="@dimen/text_size" />

            <Switch
                android:id="@+id/headerAssistantSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="Activity"
                android:textSize="@dimen/text_size_small" />


        </LinearLayout>

        <Spinner
            android:id="@+id/chooseAssistantSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <EditText
            android:id="@+id/inputDecimalField1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />

            <EditText
                android:id="@+id/inputDecimalField2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/inputDecimalField3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/inputDecimalField4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/inputDecimalField5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/inputDecimalField6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/inputDecimalField7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/inputDecimalField8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/inputDecimalField9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
        <EditText
            android:id="@+id/inputDecimalField10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/inputDecimalField11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/inputDecimalField12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/inputDecimalField13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />

    </LinearLayout>

</ScrollView>