<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AssistantActivity"
    tools:showIn="@layout/activity_assistant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/headerOfAssistants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assistant"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/text_size"/>

        <Switch
            android:id="@+id/headerAssistantSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="@dimen/text_margin"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/marketingGoalAssistantSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketing Goal assistant"
                android:textSize="@dimen/text_size_small"
                android:layout_margin="@dimen/text_margin_small"/>

            <EditText
                android:id="@+id/marketingGoalInputField"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_size_small"
                android:layout_margin="@dimen/text_margin_small"/>


        </LinearLayout>

        <Switch
            android:id="@+id/marketingAvgAssistantSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marketing Average assistant"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="@dimen/text_margin_small"/>

        <Switch
            android:id="@+id/general1AssistantSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg profit holder"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="@dimen/text_margin_small"/>

        <Switch
        android:id="@+id/general2AssistantSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"
        android:textSize="@dimen/text_size_small"
        android:layout_margin="@dimen/text_margin_small"/>

        <Switch
            android:id="@+id/general3AssistantSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventor"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="@dimen/text_margin_small"/>

    </LinearLayout>

</ScrollView>