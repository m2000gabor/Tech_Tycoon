<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailsOfOneDevice"
    tools:showIn="@layout/activity_details_of_one_company">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_margin="10sp"
            android:text="Name" />

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_margin="10sp"
            android:text="Money" />

        <TextView
            android:id="@+id/companyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_margin="10sp"
            android:text="companyID" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Levels:"
            android:textSize="22dp"
            android:layout_margin="@dimen/text_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ramLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ram:"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/ramLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lvl 0"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_toEndOf="@id/ramLabel"
                    android:layout_centerInParent="true"
                    />

                <Button
                    android:id="@+id/ramUpgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade for 0$"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/memoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory:"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/memoryLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lvl 0"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_toEndOf="@id/memoryLabel"
                    android:layout_centerInParent="true"
                    />

                <Button
                    android:id="@+id/memoryUpgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade for 0$"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>



        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delButton"
            android:onClick="delThisOne"
            android:text="Delete"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveCompany"
            android:text="Save"
            />


    </LinearLayout>

</ScrollView>