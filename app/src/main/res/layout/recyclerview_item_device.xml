<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/deviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="name"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceLastlySoldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:text="0 sold"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deviceRamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ram: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/deviceNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameTextView" />

    <TextView
        android:id="@+id/deviceMemoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Memory: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/deviceRamTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceRamTextView" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:text="0$"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/deviceLastlySoldTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceLastlySoldTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>