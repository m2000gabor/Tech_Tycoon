<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_card_background"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/deviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="name"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/incomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:text="0$"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deviceStorageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Storage: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/deviceNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameTextView" />

    <TextView
        android:id="@+id/deviceBodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Body: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/deviceStorageTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceStorageTextView" />

    <TextView
        android:id="@+id/soldPiecesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:text="Sold: 0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/incomeTextView"
        app:layout_constraintTop_toBottomOf="@+id/incomeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>